<p id="notice"><%= notice %></p>

<h1>Comentarios</h1>

<table class="striped">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Comentario de la dependencia</th>
      <th>Depanterior</th>
      <th>depactual</th>
      <th>comentario del pqr</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comentarios.each do |comentario| %>
      <tr>
        <td><%= comentario.fecha %></td>
        <td><%= comentario.comentario %></td> 
        <td><%= Dependencium.find(comentario.depanterior).descripcion%></td>
        <td><%= Dependencium.find(comentario.depactual).descripcion%></td>
        <td><%= comentario.pqr.descripcion %></td>
        <td><%= link_to '<i class="tiny material-icons">visibility</i>'.html_safe, comentario %></td>
        <td><%= link_to '<i class="tiny material-icons">mode_edit</i>'.html_safe, edit_comentario_path(comentario) %></td>
        <td><%= link_to '<i class="tiny material-icons">delete</i>'.html_safe, comentario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

